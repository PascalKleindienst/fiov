:root {
    --vp-c-brand-1: oklch(0.746 0.16 232.661);
    --vp-c-brand-2: oklch(0.685 0.169 237.323);
    --vp-c-brand-3: oklch(0.588 0.158 241.966);
}


/* roboto-slab-900 - latin */
@font-face {
    font-display: swap;
    font-family: 'Roboto Slab';
    font-style: normal;
    font-weight: 900;
    src: url('/fonts/roboto-slab-v35-latin-900.woff2') format('woff2'); /* Chrome 36+, Opera 23+, Firefox 39+, Safari 12+, iOS 10+ */
}

/* source-serif-3-regular - latin */
@font-face {
    font-display: swap;
    font-family: 'Source Serif 3';
    font-style: normal;
    font-weight: 400;
    src: url('/fonts/source-sans-3-v19-latin-regular.woff2') format('woff2'); /* Chrome 36+, Opera 23+, Firefox 39+, Safari 12+, iOS 10+ */
}

/**
 * Utils
 */
.shadow {
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
}

.rounded {
    border-radius: 0.5rem;
}

.VPDoc .content img {
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    border-radius: 0.5rem;
    border: 1px solid var(--vp-c-default-1);
}

.VPNavBar:not(.has-sidebar):not(.home.top) {
    background: rgba(var(--vp-nav-bg-color) / 0.1) !important;
    backdrop-filter: blur(10px);
}

