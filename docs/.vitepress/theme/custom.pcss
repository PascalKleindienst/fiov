/**
 * Fiov Typography
 */
.fiov {
    .fiov-title {
        font-size: 3rem;
        line-height: 1;
        margin: 0;
        padding: 0;
        border: 0 none;
    }

    .fiov-title-highlight {
        color: transparent;
        background-clip: text;
        background-image: linear-gradient(to right, var(--vp-c-brand-3), var(--vp-c-brand-1));
    }

    .fiov-subtitle {
        color: transparent;
        background-clip: text;
        background-image: linear-gradient(to right, var(--vp-c-brand-3), var(--vp-c-brand-1));
        font-weight: 600;
        font-size: 1.25rem;
        line-height: 2rem;
    }

    .fiov-lead {
        font-size: 1.125rem;
        margin-bottom: 2rem;
    }
}
